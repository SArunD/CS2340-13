<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: green;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.flowfree.FlowfreeSplashScreenController">
<children>
    <BorderPane prefHeight="400.0" prefWidth="600.0">
        <bottom>
            <ButtonBar buttonMinWidth="100.0" prefHeight="55.0" prefWidth="600.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
                <buttons>
                    <Button onAction="#backToGameSelect" cancelButton="true" mnemonicParsing="false" text="Back" ButtonBar.buttonData="LEFT"/>
                    <Button onAction="#configureGame" defaultButton="true" mnemonicParsing="false" text="Setup to Play" ButtonBar.buttonData="RIGHT"/>
                </buttons>
            </ButtonBar>
        </bottom>
        <center>
            <Text fill="WHITE" stroke="#3293d9" strokeType="OUTSIDE" strokeWidth="3.0" text="Flow Free" textAlignment="CENTER" BorderPane.alignment="CENTER">
                <font>
                    <Font name="Courier New" size="46.0" />
                </font>
            </Text>
        </center>
    </BorderPane>
</children>
</AnchorPane>
